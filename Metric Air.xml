<authors>
    <author uuid="62d9830a-0b77-4e21-9d4f-de4b60c68fb5"/> <!-- shaarpie -->
</authors>
<gamemode>rage</gamemode>
<gamemode>ctw</gamemode>
<include src="voith-death.xml"/>
<broadcasts>
