    <alert after="35sm">Watch out! You'll be killed in one hit.</alert>
</broadcasts>
<teams>
   <team id="red-team" color="red" max="7" max-overfill="10">Red</team>
   <team id="blue-team" color="blue" max="7" max-overfill="10">Blue</team>
